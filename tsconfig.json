{
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2015", 
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true, 
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": false,
    "jsx": "preserve",
    "lib": [
      "esnext", 
      "dom"
    ] ,
    "outDir": "dist",
  } ,
  "exclude": [
    "tsconfig.json" 
  ],
  "include": ["global.d.ts"]
}
