{
    "compilerOptions": {
      "declaration": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "declarationDir": "dist/@types",
      "outDir": "dist/src",
      "strictNullChecks": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "target": "ES5",
      "module": "ESNext",
      "lib": [ "DOM", "ES2021" ],
      "noEmitHelpers": true,
      "importHelpers": true
    },
    "include": [ "src" ]
  }
   